{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build C++ project",
      "type": "shell",
      "command": "clang++",
      "args": [
        "-std=c++17",
        "-Wall",
        "-o",
        "${workspaceFolder}/program",
        "${file}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
